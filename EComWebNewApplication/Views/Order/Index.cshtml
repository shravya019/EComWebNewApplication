@model List<EComWebNewApplication.Orders.Order>

<h2>Order List</h2>

<a href="/Order/PlaceOrderForm">➕ Place New Order</a>

<table border="1">
    <tr>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Order Date</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.CustomerName</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
        </tr>
    }
</table>
